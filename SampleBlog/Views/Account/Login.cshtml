@model SampleBlog.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>

<div layout="column" ng-controller="login" ng-cloak>
    <section id="loginForm" layout-align="center center">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <md-whiteframe class="md-whiteframe-2dp" flex-sm="45" flex-gt-sm="35" flex-gt-md="45" layout="column" layout-align="center center">
                <md-input-container>
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName)
                    @Html.ValidationMessageFor(m => m.UserName)
                </md-input-container>
                <md-input-container>
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </md-input-container>
                <section>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </section>
                <section>
                    <md-button type="submit" class="md-raised">Log in</md-button>
                </section>
            </md-whiteframe>

            <p>
                @Html.ActionLink("Register", "Register") if you don't have a local account.
            </p>
        }
    </section>
</div>


